@inherits LayoutComponentBase

<!-- Centered logo -->
<div class="text-center py-4">
    <img src="Images/JohnsenArt-removebg-preview.png"
         alt="Johnsen Art logo"
         style="height: 120px;"/>
</div>




<!-- Navigation bar -->
<div class="navbarFont">
    <nav class="navbar navbar-expand border-top border-bottom py-2">
        <div class="container justify-content-center">
            <ul class="navbar-nav">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Hjem</NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/gallery">Kunstverk</NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/biography">Biografi</NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/contact">Kontakt</NavLink>
                </li>
                <li class="nav-item px-3">
                    <AuthorizeView>
                        <Authorized>
                            <NavLink class="nav-link" href="/admin">Admin</NavLink>
                        </Authorized>
                    </AuthorizeView>
                </li>
            </ul>
        </div>
        <div class="top-row px-4 text-end">
            <AuthorizeView>
                <NotAuthorized>
                    <span class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </span>
                </NotAuthorized>
                <Authorized>
                    <span class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </span>
                </Authorized>
            </AuthorizeView>
        </div>
    </nav>
</div>

<div style="background-color: lightgrey">
    @Body
</div>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script>
    function showImageModal(url) {
        const img = document.getElementById('modalImage');
        img.src = url;
        const modal = new bootstrap.Modal(document.getElementById('imageModal'));
        modal.show();
    }
</script>



<footer class="text-center py-3">
    <small>&copy; 2025 Bjarne Johnsen</small>
</footer>